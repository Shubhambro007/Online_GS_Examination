<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onlineexamination.ForgotPasswordController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Forgot Password">
                <font>
                    <Font name="Arial" size="24" />
                </font>
            </Label>
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Username:" />
                <TextField fx:id="usernameField" prefHeight="30.0" prefWidth="300.0" style="-fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="New Password:" />
                <PasswordField fx:id="newPasswordField" prefHeight="30.0" prefWidth="300.0" style="-fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Confirm Password:" />
                <PasswordField fx:id="confirmPasswordField" prefHeight="30.0" prefWidth="300.0" style="-fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="resetButton" onAction="#handleResetPassword" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;" text="Reset Password" />
                <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;" text="Cancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
